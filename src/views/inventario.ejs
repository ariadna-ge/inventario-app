<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Inventario General</title>
</head>

<body>
    <header>
        <h1>
            <span>Inventario general</span>
        </h1>
        <div class="decoracion"></div>
        <a href="/" id="menu"><img src="/img/menu.png" alt="Menu principal"></a>
    </header>

    <main>
        <div class="contenedor">
            <a href="/agregar" id="boton">Agregar producto</a>
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Producto</th>
                        <th>Descripci√≥n</th>
                        <th>Sku</th>
                        <th>Cantidad</th>
                        <th>Precio de compra</th>
                        <th>Precio de venta</th>
                        <th>Categoria</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (productos && productos.length> 0) { %>
                        <% productos.forEach(p=> { %>
                            <tr>
                                <td>
                                    <%= p.id_producto %>
                                </td>
                                <td>
                                    <%= p.producto %>
                                </td>
                                <td>
                                    <%= p.descripcion %>
                                </td>
                                <td>
                                    <%= p.sku %>
                                </td>
                                <td>
                                    <%= p.cantidad %>
                                </td>
                                <td>
                                    <%= p.precio_compra %>
                                </td>
                                <td>
                                    <%= p.precio_venta %>
                                </td>
                                <td>
                                    <%= p.categoria %>
                                </td>
                                <td>
                                    <a href="/productos/agregar/<%= p.id %>"><img src="/img/editar.png" alt="Editar"
                                            id="icon"></a>
                                    <a href="/productos/eliminar/<%= p.id %>"><img src="/img/eliminar.png"
                                            alt="Eliminar" id="icon"></a>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="9">No hay productos para mostrar.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
    <footer>
        @2025 ariadna-ge. Todos los derechos reservados
    </footer>
</body>

</html>